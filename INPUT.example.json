{
  "target_url": "https://example.com",
  "selector": "h1",
  "webhook_url": "https://httpbin.org/post",
  "webhook_headers": {
    "x-sentinel-example": "true"
  },
  "baseline_mode": "store_only",
  "state_store_name": "sentinel-state",
  "dead_letter_dataset_name": "sentinel-dead-letter",
  "history_dataset_name": "sentinel-history",
  "history_mode": "changes_only",

  "fetch_timeout_secs": 30,
  "fetch_max_retries": 3,
  "fetch_retry_backoff_ms": 1000,

  "webhook_timeout_secs": 30,
  "webhook_max_retries": 3,
  "webhook_retry_backoff_ms": 1000,
  "webhook_retry_on_statuses": [429],
  "webhook_retry_on_5xx": true,
  "max_redirects": 5,
  "max_content_bytes": 2000000,
  "max_payload_bytes": 250000,
  "reset_baseline": false,
  "ignore_selectors": [],
  "ignore_regexes": [],
  "redact_logs": true,
  "debug": false
}
