{
  "name": "sentinel-webhook",
  "version": "0.1.0",
  "description": "Turn any static URL into a developer-friendly webhook (change detection).",
  "license": "MIT",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "tsx src/main.ts",
    "generate:assets": "tsx scripts/generate_launch_assets.ts",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "lint": "eslint .",
    "test": "vitest run"
  },
  "dependencies": {
    "apify": "^3.5.3",
    "cheerio": "^1.2.0",
    "diff": "^5.2.2",
    "ipaddr.js": "^2.3.0",
    "playwright": "^1.58.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/diff": "^7.0.2",
    "@types/node": "^25.2.3",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20"
  }
}
